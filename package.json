{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "ava": {
    "babel": {
      "compileAsTests": [
        "test/helpers/**/*"
      ]
    },
    "files": [
      "test/surgeon/**/*"
    ],
    "require": [
      "@babel/register"
    ]
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "es6-error": "^4.1.1",
    "pianola": "^2.2.1",
    "regex-parser": "^2.2.10",
    "roarr": "^2.15.2"
  },
  "description": "Declarative DOM extraction expression evaluator.",
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/plugin-transform-flow-strip-types": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.8.3",
    "ava": "^3.3.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-transform-export-default-name": "^2.0.4",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-canonical": "^19.0.1",
    "flow-bin": "^0.118.0",
    "flow-copy-source": "^2.0.9",
    "husky": "^4.2.3",
    "lodash": "^4.17.15",
    "nyc": "^15.0.0",
    "semantic-release": "^17.0.3",
    "sinon": "^8.1.1",
    "sprintf-js": "^1.1.2"
  },
  "engines": {
    "node": ">=8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test && npm run build"
    }
  },
  "keywords": [
    "css",
    "declarative",
    "dom",
    "parser",
    "selector"
  ],
  "license": "BSD-3-Clause",
  "main": "./dist/index.js",
  "name": "surgeon",
  "nyc": {
    "exclude": [
      "src/evaluators/browserEvaluator.js"
    ],
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "reporter": [
      "text-lcov"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/surgeon"
  },
  "scripts": {
    "build": "rm -fr ./dist && NODE_ENV=production babel ./src --out-dir ./dist --copy-files --source-maps && flow-copy-source src dist",
    "lint": "eslint ./src && flow",
    "test": "ava --verbose --serial"
  },
  "version": "1.0.0"
}
